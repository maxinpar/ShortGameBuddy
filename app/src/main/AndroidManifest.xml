<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="boucoiran.fr.shortgamebuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ShortGameDrillsActivity"
            android:label="Short Game Drills" />
        <activity
            android:screenOrientation="portrait"
            android:name=".PuttingDrillsActivity"
            android:label="Putting Drills" />
        <activity
            android:screenOrientation="portrait"
            android:name=".ShortGameScorecardActivity"
            android:label="Short Game Scorecard" />

        <activity
            android:name=".ShortChipScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Short Chip Drill" />
        <activity
            android:name=".LongChipScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Long Chip Drill" />
        <activity
            android:name=".ShortSandScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Short Sand Drill"/>
        <activity
            android:name=".LongSandScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Long Sand Drill"/>
        <activity
            android:name=".ShortPitchScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Short Pitch Drill"/>
        <activity
            android:name=".MediumPitchScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Medium Pitch Drill"/>
        <activity
            android:name=".LongPitchScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Long Pitch Drill"/>
        <activity
            android:name=".RoughChipScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Chip From Rough Drill"/>
        <activity
            android:name=".LobShotScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Lob Shot Drill"/>
        <activity
            android:name=".stats.Activities.ShowCardsActivity"
            android:screenOrientation="portrait"
            android:label="View Cards"/>
    </application>

</manifest>