<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="boucoiran.fr.shortgamebuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.menus.MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.shortGame.ShortGameDrillsActivity"
            android:label="Short Game Drills" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.shortGame.ShortGameScorecardActivity"
            android:label="Short Game Scorecard" />

        <activity
            android:name=".activities.shortGame.ShortChipScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Short Chip Drill" />
        <activity
            android:name=".activities.shortGame.LongChipScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Long Chip Drill" />
        <activity
            android:name=".activities.shortGame.ShortSandScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Short Sand Drill"/>
        <activity
            android:name=".activities.shortGame.LongSandScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Long Sand Drill"/>
        <activity
            android:name=".activities.shortGame.ShortPitchScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Short Pitch Drill"/>
        <activity
            android:name=".activities.shortGame.MediumPitchScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Medium Pitch Drill"/>
        <activity
            android:name=".activities.shortGame.LongPitchScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Long Pitch Drill"/>
        <activity
            android:name=".activities.shortGame.RoughChipScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Chip From Rough Drill"/>
        <activity
            android:name=".activities.shortGame.LobShotScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Lob Shot Drill"/>
        <activity
            android:name=".activities.stats.ShowCardsActivity"
            android:screenOrientation="portrait"
            android:label="View Cards"/>
        <activity
            android:name=".activities.menus.PuttingMenuActivity"
            android:screenOrientation="portrait"
            android:label="Putting Menu" />
        <activity
            android:name=".activities.putting.PuttingDrillsMenuActivity"
            android:screenOrientation="portrait"
            android:label="Putting Drills" />
        <activity
            android:name=".activities.putting.Short3ftPuttScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="3ft putts" />
        <activity
            android:name=".activities.putting.Short6ftPuttScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="6ft putts" />
        <activity
            android:name=".activities.putting.MakeablePuttScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Makeable putts" />
        <activity
            android:name=".activities.putting.MediumPuttScoreInputActivity"
            android:screenOrientation="portrait"
            android:label="Medium putts" />

    </application>

</manifest>